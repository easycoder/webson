{
    "#": ["$Buttons", "$Left"],
    
    "$Buttons": {
        "#element": "div",
        "text-align": "center",
        "margin-bottom": "0.5em",
        "$NButtons": 6,
        "#": [
            "$Import",
            "$Export",
            "$Open",
            "$Save",
            "$Delete",
            "$Refresh"
        ],
        
        "$Import": {
            "$Content": "Import",
            "#": "$Button"
        },
        
        "$Export": {
            "$Content": "Export",
            "#": "$Button"
        },
        
        "$Open": {
            "$Content": "Open",
            "#": "$Button"
        },
        
        "$Save": {
            "$Content": "Save",
            "#": "$Button"
        },
        
        "$Delete": {
            "$Content": "Delete",
            "#": "$Button"
        },
        
        "$Refresh": {
            "$Content": "Refresh",
            "#": "$Button"
        },
        
        "$Button": {
            "#element": "button",
            "@id": "$Content",
            "@type": "button",
            "#content": "$Content",
            "width": "calc(<#parent_width/$NButtons>px - 0.5em - 1px)",
            "margin": "0 0.25em 0 0.25em"
        }
    },
    
    "$Left": {
        "#element": "div",
        "width": "100%",
        "margin-top": "0.5em",
        
        "#": "$Inner",
        
        "$Inner": {
            "#element": "div",
            "width": "100%",
            "#": ["$Import", "$Parse", "$Properties"]
        },
    
        "$Import": {
            "#element": "textarea",
            "@id": "ImportPanel",
            "display": "none",
            "width": "100%",
            "height": "20em"
        },
        
        "$Parse": {
            "#element": "button",
            "@id": "Parse",
            "@type": "button",
            "#content": "Parse",
            "display": "none",
            "width": "100%"
        },
        
        "$Properties": {
            "#element": "div",
            "@id": "left",
            "display": "flex",
            "flex-direction": "row",
            "overflow-x": "scroll",
            "background": "yellow"
        }
    }
}
