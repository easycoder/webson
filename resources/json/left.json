{
    "#": ["$Buttons", "$Left"],
    
    "$Buttons": {
        "#element": "div",
        "text-align": "center",
        "margin-bottom": "0.5em",
        "$NButtons": 6,
        "#": [
            "$Import",
            "$Export",
            "$Open",
            "$Save",
            "$Delete",
            "$Refresh"
        ],
        
        "$Import": {
            "$Content": "Import",
            "#": "$Button"
        },
        
        "$Export": {
            "$Content": "Export",
            "#": "$Button"
        },
        
        "$Open": {
            "$Content": "Open",
            "#": "$Button"
        },
        
        "$Save": {
            "$Content": "Save",
            "#": "$Button"
        },
        
        "$Delete": {
            "$Content": "Delete",
            "#": "$Button"
        },
        
        "$Refresh": {
            "$Content": "Refresh",
            "#": "$Button"
        },
        
        "$Button": {
            "#element": "button",
            "@id": "$Content",
            "@type": "button",
            "#content": "$Content",
            "width": "calc(<#parent_width/$NButtons>px - 0.5em - 1px)",
            "margin": "0 0.25em 0 0.25em"
        }
    },
    
    "$Left": {
        "#element": "div",
        "margin-top": "0.5em",
        
        "#": "$Structure",
        
        "$Structure": {
            "#element": "div",
            "@id": "left",
            "width": "100%",
            "#include": "resources/json/structure.json"
        }
        
    }
}
